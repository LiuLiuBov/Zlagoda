<head>
    <link rel="stylesheet" href="/employees.css">
</head>

<body>
    <h1 class="my-5">Продукти в магазині</h1>
    <form action="/productsinmarket" method="get">
        <label for="sortCriteria">Сортувати за:</label>
        <select name="sortCriteria" id="sortCriteria">
            <option value="product_name">Назвою товарів</option>
            <option value="products_number">Кількістю товарів</option>
        </select>
        <button class="btn btn-outline-secondary" type="submit">
                    <i class="fas fa-search"></i>
                </button>
    </form>

    <!--<div class="checkbox-container">
        <label for="sort-name">за зростанням</label>
        <input type="checkbox" id="sort-name" name="sort-name">
        <label for="sort-quantity">за спаданням</label>
        <input type="checkbox" id="sort-quantity" name="sort-quantity">
    </div>-->
    {{#if ismanager}}
    <a href="/productsinmarket/add" class="btn btn-primary">Додати товар</a>
    {{/if}}
    <script>
        const sortNameCheckbox = document.getElementById('sort-name');
        const sortQuantityCheckbox = document.getElementById('sort-quantity');

        sortNameCheckbox.addEventListener('change', function () {
            if (this.checked) {
                sortQuantityCheckbox.checked = false;
            }
        });

        sortQuantityCheckbox.addEventListener('change', function () {
            if (this.checked) {
                sortNameCheckbox.checked = false;
            }
        });
    </script>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>UPC</th>
                    <th>UPC_prom</th>
                    <th>Категорія</th>
                    <th>Товар</th>
                    <th>Вартість</th>
                    <th>Кількість</th>
                    <th>Характеристика</th>
                    <th>Акційний товар</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="productsinmarket-table">
                {{#each productsinmarket}}
                <tr>
                    <td>{{this.UPC}}</td>
                    <td>{{this.UPC_prom}}</td>
                    <td>{{this.category_name}}</td>
                    <td>{{this.product_name}}</td>
                    <td>{{this.selling_price}}</td>
                    <td>{{this.products_number}}</td>
                    <td>{{this.caracteristics}}</td>
                    <td> {{#if this.promotional_product}}
                        так
                        {{else}}
                        ні
                        {{/if}}</td>
                        
                    <td>{{#if ../ismanager}}
                        <a href="productsinmarket/edit/{{this.UPC}}" class="btn btn-success btn-sm"><i
                                class="fas fa-pencil-alt"></i></a>
                        <a href="productsinmarket/delete/{{this.UPC}}" class="btn btn-danger btn-sm"><i
                                class="fa fa-times"></i></a>
                                {{else}}
                    {{/if}}</td>
                    
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

  
    <!-- Підключаємо jQuery та Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>