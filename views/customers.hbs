<head>
<link rel="stylesheet" href="/customers.css">
</head>

<body>
  <h1 class="my-5">Клієнти</h1>
    <div class="row">
        
        <a href="/customers/add" class="btn btn-primary">Додати нового клієнта</a>

            <div class="col-md-4">
              <div class="input-group">
                <form action="/customers" method="POST">
                    <input type="text" id="searchpercent" name="searchpercent" class="form-control"
                        placeholder="Пошук за відсотком знижки">
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
              </div>
            </div>
          </div>
        
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Номер карти</th>
                  <th>Ім'я</th>
                  <th>Прізвище</th>
                  <th>По-батькові</th>
                  <th>Номер телефону</th>
                  <th>Місто</th>
                  <th>Вулиця</th>
                  <th>Зіп-код</th>
                  <th>Відсоток знижки</th>
                  <th></th>
                </tr>
              </thead>
              <tbody id="customers-table">
                {{#each customers}}
                <tr>
                    <td>{{this.card_number}}</td>
                    <td>{{this.cust_name}}</td>
                    <td>{{this.cust_surname}}</td>
                    <td>{{this.cust_patronymic}}</td>
                    <td>{{this.phone_number}}</td>
                    <td>{{this.city}}</td>
                    <td>{{this.street}}</td>
                    <td>{{this.zip_code}}</td>
                    <td>{{this.percent}}</td>
                    <td>
                        <button class="btn btn-success btn-sm"><i class="fas fa-pencil-alt"></i></button>
                        <button class="btn btn-danger btn-sm"><i class="fa fa-times"></i></button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            </table>
          </div>
    </div>
    <!-- Підключаємо jQuery та Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>