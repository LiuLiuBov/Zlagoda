<head>
    <link rel="stylesheet" href="/employees.css">
</head>

<body>
    <h1 class="my-5">Працівники</h1>
    <button id="reportBtn" class="btn btn-primary btn-sm">Звіт</button>
    <div class="container">
        <a href="/employees/add" class="btn btn-primary">Додати нового працівника</a>
        <div class="col-md-4">
            <div class="input-group">
                <form action="/employees" method="POST">
                    <input type="text" id="searchsurname" name="searchsurname" class="form-control"
                        placeholder="Пошук за прізвищем">
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
            </div>
        </div>

        <div id="select-position">
            <form action="/employees" method="POST">
                <label for="occupation">Пошук за посадою:</label>
                <select id="occupation" name="occupation">
                    <option value="none"></option>
                    <option value="manager">Менеджер</option>
                    <option value="cashier">Касир</option>
                </select>
                <button class="btn btn-outline-secondary" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>
    </div>



    <div class="table-responsive">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID працівника</th>
                    <th>Ім'я</th>
                    <th>Прізвище</th>
                    <th>По-батькові</th>
                    <th>Посада</th>
                    <th>Заробітня плата</th>
                    <th>Дата народження</th>
                    <th>Дата початку роботи</th>
                    <th>Номер телефону</th>
                    <th>Місто</th>
                    <th>Вулиця</th>
                    <th>Зіп-код</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="employees-table">
                {{#each employees}}
                <tr>
                    <td>{{this.id_employee}}</td>
                    <td>{{this.empl_name}}</td>
                    <td>{{this.empl_surname}}</td>
                    <td>{{this.empl_patronymic}}</td>
                    <td>{{this.empl_role}}</td>
                    <td>{{this.salary}}</td>
                    <td>{{formatDate this.date_of_birth}}</td>
                    <td>{{formatDate this.date_of_start}}</td>
                    <td>{{this.phone_number}}</td>
                    <td>{{this.city}}</td>
                    <td>{{this.street}}</td>
                    <td>{{this.zip_code}}</td>
                    <td>
                        <a href="employees/edit/{{this.id_employee}}" class="btn btn-success btn-sm"><i
                                class="fas fa-pencil-alt"></i></a>
                        <a href="employees/delete/{{this.id_employee}}" class="btn btn-danger btn-sm"><i
                                class="fa fa-times"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

    </div>
    <script>
        $(document).ready(function () {
            $('#reportBtn').on('click', function () {
                window.open('/employees/report', '_blank');
            });
        });
    </script>
    <!-- Підключаємо jQuery та Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>