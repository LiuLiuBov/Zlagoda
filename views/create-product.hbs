<head>
    <link rel="stylesheet" href="/create.css">
</head>

<body>
    <!-- Форма для додавання нового клієнта -->
    <h2 class="mt-5">Додати товар</h2>
    <form action="/products/adding" method="POST">
        <div class="form-group">
            <select id="addcategory" name="addcategory" class="form-control" required>
                {{#each categories}}
                <option value="{{this.category_number}}">{{this.category_number}} {{this.category_name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label for="addproductname">Назва продукту:</label>
            <input type="text" id="addproductname" name="addproductname" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="addproductcharacteristics">Характеристики:</label>
            <input type="text" id="addproductcharacteristics" name="addproductcharacteristics" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Додати</button>
    </form>
    </div>
    <!-- Підключаємо jQuery та Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>